@model NotesMarketPlace.Models.AddCountry

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-profile">
    <div class="container">
        <div class="admin-heading">
            <h3>
                Edit Country
            </h3>
        </div>
        <div class="admin-profile-details">
            @using (Html.BeginForm("EditCountry/" + @Model.CoutryID, "Admin", FormMethod.Post))
                    {
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="hidden" name="CoutryID" value="@Model.CoutryID">
                        <label>Country Name *</label>
                        @Html.TextBoxFor(x=>x.Name, new { @class = "form-control" ,@placeholder = "Enter Country",@value="@Model.Name" })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger errormessage" })
                    </div>

                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">
                            Country Code
                            *
                        </label>
                        @Html.TextBoxFor(x=>x.CountryCode, new { @class = "form-control" ,@placeholder = "Enter Country Code",@value="@Model.CountryCode" })
                        @Html.ValidationMessageFor(model => model.CountryCode, "", new { @class = "text-danger errormessage" })
                        @*<textarea class="form-control" id="exampleFormControlTextarea1" rows="5" placeholder="Enter your description"></textarea>*@
                    </div>

                </div>
            </div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <button class="btn-general btn-submit-form" type="submit">
                        submit
                    </button>
                </div>
            </div>
            }
        </div>
    </div>
</div>