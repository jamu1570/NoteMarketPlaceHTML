
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Error</title>

    <!-- Custom CSS -->
   
    <link href="~/Content/css/ErrorStyle.css" rel="stylesheet" />
   
</head>
<body>
    
    <div class="mars"></div>
    <img src="https://assets.codepen.io/1538474/404.svg" class="logo-404" />
    <img src="https://assets.codepen.io/1538474/meteor.svg" class="meteor" />
    <p class="title">Oh no!!</p>
    <p class="subtitle">
        You’re either misspelling the URL <br /> or requesting a page that's no longer here.
    </p>
    <div align="center">
        @if (User.Identity.IsAuthenticated && User.IsInRole("Member"))
        {
       @* <a class="button" href="/User/Index">Back Home</a>*@
        <a class="btn-back" href="/Member/Dashboard">Back to previous page</a>
        }
        else if (User.Identity.IsAuthenticated && User.IsInRole("SuperAdmin"))
        {
        @*<a class="button" href="/Admin/Dashboard">Back Home</a>*@
        <a class="btn-back" href="/Admin/Dashboard">Back to previous page</a>
        }
        else if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
        {
       @* <a class="button" href="/Admin/Dashboard">Back Home</a>*@
        <a class="btn-back" href="/Admin/Dashboard">Back to previous page</a>
        }
        else
        {
       @* <a class="button" href="/Home/Index">Back Home</a>*@
        <a class="btn-back" href="/HomePage/Index">Back to previous page</a>
        }


    </div>
    <img src="https://assets.codepen.io/1538474/astronaut.svg" class="astronaut" />
    <img src="https://assets.codepen.io/1538474/spaceship.svg" class="spaceship" />

   
</body>
</html>