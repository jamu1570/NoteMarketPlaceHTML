@model NotesMarketPlace.Models.ForgetPassword
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,
            initial-scale=1 maximum-scale=1.0,user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@ViewBag.Title Forget-password</title>
    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Content/images//Homepage/favicon.ico">
    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">
    <!-- Bootstrap Css    -->
    <link rel="stylesheet" href="~/Content/css/bootstrap/bootstrap.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/Content/css/style.css">
    <!-- Responsive CSS -->
    <link rel="stylesheet" href="~/Content/css/responsive.css">
</head>

<body>
    <div class="main-page">
        <div class="main-page-container">
            <div class="form-wrap">
                <div id="site-logo" class="text-center">
                    <a href="/HomePage">   <img src="~/Content/images//Login/top-logo.png" class="img-responsive" alt="top-logo"></a>
                </div>
                <div id="form-size" class="main-general-form">
                    @using (Html.BeginForm("ForgetPassword", "Account", FormMethod.Post, new { }))
                    {

                    <h3 class="text-center">Forgot Password?</h3>
                    <p class="text-center">
                        Enter your email to reset
                        your password
                    </p>

                        if(@TempData["Error"] != null ){
                    <p>
                        @TempData["Error"]
                    </p>
                    }
                    <div class="form-group">
                        <label for="exampleInputEmail1" class="form-label">
                            Email
                        </label>
                        @Html.TextBoxFor(x => x.EmailID, new { id = "exampleInputEmail1", @class = "form-control", @placeholder = "Enter Your Password" })
                        @Html.ValidationMessageFor(model => model.EmailID, "", new { @class = "text-danger errormessage" })
                        @*<input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Your Email">*@
                    </div>
                    <button type="submit" class="btn-general"> SUBMIt</button>

                    }
                </div>
            </div>
        </div>
    </div>
    <!-- Jquery   -->
    <script src="~/Scripts/js/jquery/jquery-3.5.1.min.js"></script>
    <!-- Bootstrap Js -->
    <script src="~/Scripts/js/bootstrap/bootstrap.min.js"></script>
    <!-- Custom Js -->
    <script src="~/Scripts/js/script.js"></script>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

</body>

</html>
