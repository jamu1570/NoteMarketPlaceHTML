@model NotesMarketPlace.Models.AddAdministrator

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-profile">
    <div class="container">
        <div class="admin-heading">
            <h3>
                Add Administrator
            </h3>
        </div>
        <div class="admin-profile-details">
            @using (Html.BeginForm("AddAdministrator", "Admin", FormMethod.Post))
                    {
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>First Name *</label>
                        @Html.TextBoxFor(x=>x.FirstName, new { @class = "form-control", @placeholder = "Enter Admin FirstName" })
                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger errormessage" })
                    </div>
                    <div class="form-group">
                        <label>Last Name *</label>
                        @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", @placeholder = "Enter Admin LastName" })
                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger errormessage" })
                    </div>
                    <div class="form-group">
                        <label>Email *</label>
                        @Html.TextBoxFor(x => x.EmailID, new { id = "exampleInputEmail1", @class = "form-control", @placeholder = "Enter Admin Email" })
                        @Html.ValidationMessageFor(model => model.EmailID, "", new { @class = "text-danger errormessage" })
                    </div>
                    <div class="form-group">
                        <label>Phone Number</label>
                        <div class="row">
                            <div class="col-md-3 col-sm-3">
                                @Html.DropDownList("PhoneNumberCountryCode",new SelectList(ViewBag.PhoneNumberCountryCode, "CountryCode", "CountryCode"),new { @class = "form-control", name="PhoneNumberCountryCode"})
                                @Html.ValidationMessageFor(model => model.PhoneNumberCountryCode, "", new { @class = "text-danger errormessage" })
                            </div>
                            <div class="col-md-9 col-sm-9">
                                @Html.TextBoxFor(x=>x.PhoneNumber, new {@class = "form-control phone-number-input", @placeholder = "Enter Phone Number"})
                                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger errormessage" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <button type="submit" class="btn-general btn-submit-form">
                        submit
                    </button>
                </div>
            </div>
            }
        </div>
    </div>
</div>